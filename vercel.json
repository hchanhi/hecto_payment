{
  "version": 2,
  "rewrites": [
    { "source": "/api/(.*)", "destination": "/server.js" }
  ],
  "builds": [
    {
      "src": "server.js",
      "use": "@vercel/node"
    },
    { 
      "src": "public/**", 
      "use": "@vercel/static" 
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/server.js"
    },
    {
      "src": "/(.*)",
      "dest": "/public/$1"
    }
  ]
}
